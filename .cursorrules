{
  "editor": {
    "tabSize": 2,
    "insertSpaces": true,
    "rulers": [80],
    "wordWrap": "off",
    "trimTrailingWhitespace": true,
    "insertFinalNewline": true
  },
  "files": {
    "exclude": {
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/Thumbs.db": true,
      "**/node_modules": true,
      "**/dist": true,
      "**/build": true
    }
  },
  "search": {
    "exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/*.code-search": true
    }
  },
  "terminal": {
    "integrated": {
      "shell": {
        "osx": "/bin/zsh"
      }
    }
  }
}
